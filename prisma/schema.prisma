generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type VoteLinkVote {
  count   Int
  cuisine String
}

model Cuisine {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  username String     @unique
  password String
  VoteLink VoteLink[]
}

model VoteLink {
  id       String         @id @default(auto()) @map("_id") @db.ObjectId
  admin    User           @relation(fields: [adminId], references: [id])
  adminId  String         @db.ObjectId
  isActive Boolean
  url      String
  votes    VoteLinkVote[]
}
